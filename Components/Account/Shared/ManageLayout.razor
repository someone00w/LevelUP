@inherits LayoutComponentBase
@layout AccountLayout

<div class="container">
<h1>Manage your account</h1>

<div>
    <h2>Change your account settings</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ManageNavMenu />
        </div>
        <div class="col-md-9">
            @Body
        </div>
    </div>
</div>
</div>

<style>
    /* Push content down below the navigation bar */
    .container {
        margin-top: 30px; /* Adjust if necessary based on navbar height */
        padding: 20px;
        margin-bottom: 50px; /* Adds space between the container and the bottom */
        min-height: calc(75vh - 100px); /* Ensures it takes up most of the viewport but leaves space at the bottom */
    }

    h1 {
        font-size: 2.5rem;
        text-align: center;
        font-family: Arial, sans-serif;
        color: #e0e0e0;
    }

    h2 {
        font-size: 1.8rem;
        text-align: center;
        margin-bottom: 1.5rem;
        color: white;
    }

    .row {
        display: flex;
        align-items: flex-start;
        gap: 2rem;
        flex-wrap: nowrap; /* Ensures items stay in a row */
    }

    .col-md-3 {
        flex: 0 0 250px; /* Fixed width for the navigation menu */
    }

    .col-md-9 {
        flex: 1; /* Takes remaining space */
    }
</style>